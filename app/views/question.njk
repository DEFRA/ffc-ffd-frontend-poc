{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "#"
      },
      {
        text: "Question",
        href: "/question"
      }]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">FFC FFD Question</h1>
      <form action="/question" method="post" novalidate>
      {{ govukInput({
        label: {
          text: "Full name"
        },
        id: "fullname",
        name: "name"
      }) }}

      {{ govukInput({
        label: {
          text: "Email address"
        },
        hint: {
          text: "Weâ€™ll only use this to send you a receipt"
        },
        id: "email",
        name: "email",
        type: "email",
        autocomplete: "email",
        spellcheck: false
      }) }}
                    
        {{ govukButton({
        text: "Save and continue"
      }) }}

      </form>
    </div>
  </div>
{% endblock %}
